<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="crawlerConfig" class="com.sc2geeks.PlayerCrawler.CrawlerConfig">
		<property name="allPlayerUrl" value="http://wiki.teamliquid.net/starcraft2/Players_(All)"></property>
		<property name="wikiRootUrl" value="http://wiki.teamliquid.net"></property>
		<property name="mongoHost" value="localhost" />
		<property name="mongoPort" value="27017" />
		<property name="mongoDBName" value="sc2" />
		<property name="crawledProgamerCollectionName" value="crawled_progamer" />
	</bean>
</beans>